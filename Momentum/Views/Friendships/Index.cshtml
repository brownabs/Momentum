@model Momentum.Models.ViewModels.UserAndFriendsViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Meet the Momentum Gang</h1>

<table class="table">
    <thead>
        <tr>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ApplicationUsers) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)  @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                <a asp-action="Create" asp-route-id="@item.Id">Add Friend</a> |
                <a asp-action="Details" asp-route-id="@item.Id">View Profile</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete Friend</a>
            </td>
        </tr>
}
    </tbody>
</table>
