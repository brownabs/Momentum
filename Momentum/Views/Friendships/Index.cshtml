@model Momentum.Models.ViewModels.UserAndFriendsViewModel

@{
    ViewData["Title"] = "Index";
}

@if (ViewBag.usersCurrentUserIsntFollowingCount == 0)
{
    <div class="text-center">
        <h3 class="display-4 font-italic">
            There are no Momentum users for you to follow
        </h3>


    </div>

}
else
{

<div class="text-center pb-sm-2">
    <h3 class="display-4 font-italic">
       Momentum Users
    </h3>
    <p>follow Momentum users to see what projects they're working on </p>
</div>
        <table class="table">
            <thead>
             
            </thead>
            <tbody>
                <div>
                    @foreach (var item in Model.notFriends)
                    {
                        if (item != null)
                        {


                            <tr>
                                <td>

                                    @Html.DisplayFor(modelItem => item.FirstName)  @Html.DisplayFor(modelItem => item.LastName)
                                </td>
                                <td>
                                    <a asp-action="Create" asp-route-id="@item.Id" class="links">Follow User</a> |
                                    <a asp-action="GetUserProfile" asp-controller="Home" asp-route-id="@item.Id" class="links">View Profile</a>
                                </td>

                            </tr>
                        }
                    }
                </div>

            </tbody>
        </table>
        }
